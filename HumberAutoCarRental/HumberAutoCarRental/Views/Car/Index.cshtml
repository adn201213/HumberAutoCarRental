@model IEnumerable<HumberAutoCarRental.Models.Car>
@using HumberAutoCarRental.Models
@{
    ViewBag.Title = "Index";
}

<h3>Manage cars</h3>

<br />
<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<br />
<table class="table table-condensed table-hover">
    <tr class="table-header">

        <th>
            @Html.DisplayNameFor(model => model.PlateId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Maker)
        </th>
        
        @*<th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Availability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MadeYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarType.Name)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.PlateId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CarName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Maker)
    </td>
    
    @*<td>
        @Html.DisplayFor(modelItem => item.ImageUrl)
    </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Availability)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateAdded)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MadeYear)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CarType.Name)
    </td>
    <td>
        @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { CarId = item.ID })
    </td>
</tr>
    }

</table>
